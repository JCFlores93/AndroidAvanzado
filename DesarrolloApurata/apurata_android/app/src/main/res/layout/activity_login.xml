<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/parentView"
    android:layout_gravity="center">
    <TextView
    android:id="@+id/txtMainTitle1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/mainTitle1"
    android:padding="30dp"
    android:textStyle="bold"
    android:textSize="16sp"
    android:textColor="#000"
    android:textAlignment="center"
    />

    <LinearLayout
        android:id="@+id/lnrGoToWebNotRegistered"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/txtMessageNull"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            android:text="@string/errorMessageNull"
            android:textSize="18sp"
            />
        <Button
            android:id="@+id/btnGoToApurataCom"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ir a la web"
            android:visibility="gone"
            />
    </LinearLayout>
        <android.support.percent.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:visibility="visible"
            >
        <ImageView
            android:id="@+id/imageAlert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_warning"
            app:layout_marginTopPercent="35%"
            />
        <TextView
            android:id="@+id/txtAlert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Para continuar debe: Habilitar el permiso del GPS y encender el GPS."
            android:layout_below="@+id/imageAlert"
            android:paddingRight="40dp"
            android:paddingLeft="20dp"
            app:layout_marginTopPercent="2%"
            android:textAlignment="center"
            />
        </android.support.percent.PercentRelativeLayout>
    <ProgressBar
        android:id="@+id/progressBarLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="center"
        />

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <com.facebook.login.widget.LoginButton
            android:id="@+id/login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:textSize="21dp"
            app:layout_marginTopPercent="35%"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            />


        <TextView
            android:id="@+id/messageLoginView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login_button"
            android:layout_marginTop="4dp"
            android:paddingLeft="10sp"
            android:paddingRight="10sp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:text="@string/thirdParagraphOnLoginActivity"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="13sp"
            android:textStyle="bold"
            android:visibility="visible"
        />

        <TextView
            android:id="@+id/messageLoginView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="57dp"
            android:paddingLeft="18sp"
            android:paddingRight="18sp"
            android:paddingTop="5sp"
            android:text="@string/fourthParagraphOnLoginActivity"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textStyle="bold"
            android:visibility="visible" />

    </android.support.percent.PercentRelativeLayout>
</FrameLayout>